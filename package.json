{
  "name": "yee88-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo --filter='./packages/*' dev",
    "build": "turbo --filter='./packages/*' build",
    "test": "turbo --filter='./packages/*' test",
    "typecheck": "turbo --filter='./packages/*' typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "turbo": "^2.6.3",
    "typescript": "^5"
  }
}
